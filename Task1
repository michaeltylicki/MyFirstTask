using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Zadanie_1
{
    class Program
    {
        static void Main(string[] args)
        {
            double F, C;
            Console.WriteLine("Proszę o podanie temaperatury w stopniach Celsjusza: ");
                C = double.Parse(Console.ReadLine());
            F = 32 + (9 * C) / 5;
            Console.WriteLine("Temaperatura w stopniach Fahrenheita wynosi: " + F);
            Console.ReadKey();
        }
    }
}

namespace Zadanie_2
{
    class Program
    {
        static void Main(string[] args)
        {
            int a, b, c;
            double delta;
            Console.WriteLine("Zostaniesz poproszony o podanie trzech współczynników a, b i c.");
            Console.WriteLine("Podaj wartość dla wsp. a: ");
            a = int.Parse(Console.ReadLine());
            Console.WriteLine("Podaj wartość dla wsp. b: ");
            b = int.Parse(Console.ReadLine());
            Console.WriteLine("Podaj wartość dla wsp. c: ");
            c = int.Parse(Console.ReadLine());

            delta = b ^ 2 - 4 * a * c;
            Console.WriteLine("Delta wynosi: " + delta);
            Console.ReadKey();
        }
    }
}
